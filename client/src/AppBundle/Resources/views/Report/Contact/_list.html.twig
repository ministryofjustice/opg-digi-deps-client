{% import 'AppBundle:Macros:macros.html.twig' as macros %}

{% set translationDomain = "report-contacts" %}
{% trans_default_domain translationDomain %}
{% set page = 'summaryPage' %}
{% set hideEditLink = hideEditLink | default(false) %}

<dl class="govuk-summary-list">
    {{ macros.summaryListHeaderQA(hideEditLink) }}
    <div class="govuk-summary-list__row behat-region-has-contacts">
        <dt class="govuk-summary-list__key">
            {{ 'existPage.form.hasContacts.label' | trans(transOptions)  }}
        </dt>
        <dd class="govuk-summary-list__value">
            {{ report.hasContacts | capitalize }}
        </dd>
        {% if not hideEditLink  %}
            <dd class="govuk-summary-list__actions">
                <a href="{{ url('contacts_exist', { 'reportId': report.id, 'from': 'summary' }) }}" class="behat-link-edit govuk-link">
                    {{ 'edit' | trans({}, 'common') }}
                </a>
            </dd>
        {% endif %}
    </div>
    {% if report.reasonForNoContacts %}
        <div class="govuk-summary-list__row behat-region-reason-no-contacts">
            <dt class="govuk-summary-list__key">
                Reason for no contacts
            </dt>
            <dd class="govuk-summary-list__value">
                {{ report.reasonForNoContacts | nl2br }}
            </dd>
            {% if not hideEditLink  %}
                <dd class="govuk-summary-list__actions">
                    <a href="{{ path('contacts_exist', { 'reportId': report.id, 'from': 'summary'}) }}" class="govuk-link behat-link-edit">
                        {{ 'edit' | trans({}, 'common') }}
                    </a>
                </dd>
            {% endif %}
        </div>
    {% endif %}
</dl>

{% if report.contacts | length > 0 %}
    <div class="grid-row">
        <div class="column-half">
            <h2 class="heading-medium flush--ends">{{ (page ~ '.listOfContacts') | trans }}</h2>
        </div>
        <div class="column-half text--right">
            {% if not hideEditLink  %}
                <a href="{{ path('contacts_add', { 'reportId': report.id, 'from': 'summary'}) }}" class="bold-small move-quarter--up action-link behat-link-add">
                    <span class="icon icon-plus"></span>
                    {{ (page ~ '.addButton') | trans }}
                </a>
            {% endif %}
        </div>
    </div>
{% endif %}

{% if report.contacts | length > 0 %}
    <dl class="govuk-summary-list columns-3">
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                {{ (page ~ '.contact') | trans }}
            </dt>
            <dd class="govuk-summary-list__key">
                {{ (page ~ '.relationship') | trans }}
            </dd>
            <dd class="govuk-summary-list__key">
                {{ (page ~ '.reasonForContact') | trans }}
            </dd>
            {% if not hideEditLink  %}
                <dd class="govuk-summary-list__actions">
                    <span class="visually-hidden">{{ 'actions' | trans({}, 'common') }}</span>
                </dd>
            {% endif %}
        </div>
        {% for contact in report.contacts %}
            <div class="govuk-summary-list__row behat-region-contact-{{ contact.postcode | behat_namify }}">
                <dt class="govuk-summary-list__value">
                    {{ contact.contactName }}<br/>
                        <p class="font-xsmall flush--ends">
                            {% if contact.address %}
                                {{ contact.address }}<br/>
                            {% endif %}
                            {% if contact.address2 %}
                                {{ contact.address2 }}<br/>
                            {% endif %}
                            {% if contact.county %}
                                {{ contact.county }}<br/>
                            {% endif %}
                            {% if contact.postcode %}
                                {{ contact.postcode }}<br/>
                            {% endif %}
                            {% if contact.country %}
                                {{ contact.country | country_name }}<br/>
                            {% endif %}
                        </p>
                </dt>
                <dd class="govuk-summary-list__value">
                        {{ contact.relationship }}
                </dd>
                <dd class="govuk-summary-list__value">
                        {{ contact.explanation }}
                </dd>
                {% if not hideEditLink  %}
                    <dd class="govuk-summary-list__actions">
                        <a href="{{ url('contacts_edit', { 'reportId': report.id, 'contactId': contact.id }) }}" class="behat-link-edit govuk-link">{{ 'edit' | trans({}, 'common') }}</a>
                        <a href="{{ path('contacts_delete', { 'reportId': report.id, 'contactId': contact.id }) }}" class="push-half--left govuk-link behat-link-delete">{{ 'remove' | trans({}, 'common' ) }}</a>
                    </dd>
                {% endif %}
            </div>
        {% endfor %}
    </dl>
{% endif %}
