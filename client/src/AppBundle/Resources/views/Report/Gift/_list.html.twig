{% import 'AppBundle:Macros:macros.html.twig' as macros %}

{% set translationDomain = "report-gifts" %}
{% trans_default_domain translationDomain %}

{% set hideEditLink = hideEditLink | default(false) %}

<dl class="govuk-summary-list columns-2 push-double--bottom">
    {{ macros.summaryListHeaderQA(hideEditLink) }}
    <div class="govuk-summary-list__row behat-region-gifts-exist">
        <dt class="govuk-summary-list__key">
            {{ 'existPage.form.giftsExist.label' | trans(transOptions)  }}
        </dt>
        <dd class="govuk-summary-list__value">
            {{ report.giftsExist | capitalize }}
        </dd>
        {% if not hideEditLink %}
            <dd class="govuk-summary-list__actions">
                <a href="{{ path('gifts_exist', { 'reportId': report.id, 'from': 'summary' }) }}" class="behat-link-edit govuk-link">
                    {{ 'edit' | trans({}, 'common') }}
                </a>
            </dd>
        {% endif %}
    </div>
</dl>

{% if report.gifts | length > 0 %}
    <div class="grid-row">
        <div class="column-half">
            <h2 class="heading-medium flush--ends">List of gifts</h2>
        </div>
        {% if not hideEditLink %}
            <div class="column-half text--right">
                <a href="{{ path('gifts_add', { 'reportId': report.id, 'from': 'summary'}) }}" class="bold-small move-quarter--up action-link behat-link-add">
                    <span class="icon icon-plus"></span>
                    {{ 'summaryPage.addButton' | trans }}
                </a>
            </div>
        {% endif %}
    </div>
{% endif %}

{% if report.gifts | length > 0 %}


    <dl class="govuk-summary-list columns-3">
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                Description of gift
            </dt>
            {% if report.canLinkToBankAccounts %}
                <dd class="govuk-summary-list__key">
                    Bank account
                </dd>
            {% endif %}
            <dd class="govuk-summary-list__key">
                Amount
            </dd>
            {% if not hideEditLink  %}
                <dd class="govuk-summary-list__actions">
                    <span class="visually-hidden">{{ 'actions' | trans({}, 'common') }}</span>
                </dd>
            {% endif %}
        </div>
        
        {% for gift in report.gifts %}
            <div class="govuk-summary-list__row behat-region-gift-{{ gift.explanation | behat_namify }}">
                <dt class="govuk-summary-list__key">
                    {{ gift.explanation }}
                </dt>
                {% if report.canLinkToBankAccounts %}
                    <dd class="govuk-summary-list__value">
                        {{ (gift.bankAccount) ? gift.bankAccount.nameOneLine : '-' }}
                    </dd>
                {% endif %}
                <dd class="govuk-summary-list__value">
                    £{{ gift.amount | money_format }}
                </dd>
                {% if not hideEditLink %}
                    <dd class="govuk-summary-list__actions">
                        <a href="{{ path('gifts_edit', { 'reportId': report.id, 'giftId': gift.id }) }}" class="behat-link-edit govuk-link">{{ 'edit' | trans({}, 'common') }}</a>
                        <a href="{{ path('gifts_delete', { 'reportId': report.id, 'giftId': gift.id }) }}" class="push-half--left govuk-link behat-link-delete">{{ 'remove' | trans({}, 'common' ) }}</a>
                    </dd>
                {% endif %}
            </div>
        {% endfor %}

        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                <span class="bold-small">Total amount</span>
            </dt>
            {% if report.canLinkToBankAccounts %}
                <dd class="govuk-summary-list__value"></dd>
            {% endif %}
            <dd class="govuk-summary-list__value">
                <span class="bold-small behat-region-gift-total">£{{ report.giftsTotalValue | money_format }}</span>
            </dd>
            {% if not hideEditLink %}
                <dd class="govuk-summary-list__actions"></dd>
            {% endif %}
        </div>
    </dl>
{% endif %}
