{% set translationDomain = "ndr-assets" %}
{% trans_default_domain translationDomain %}

{# "client own assets" question #}
<table class="check-your-answers columns-2 push-double--bottom">
    <thead>
        <tr>
            <th>{{ 'question' | trans({}, 'common') }}</th>
            <th>{{ 'answer' | trans({}, 'common') }}</th>
            <th>
                <span class="visually-hidden">{{ 'actions' | trans({}, 'common') }}</span>
            </th>
        </tr>
    </thead>
    <tbody>
        <tr class="behat-region-has-assets">
            <td>
                {{ 'existPage.form.noAssetToAdd.label' | trans(transOptions)  }}
            </td>
            <td>
                {{ ndr.noAssetToAdd ? 'No' : 'Yes' }}
            </td>
            <td class="change-answer">
                <a href="{{ url('ndr_assets_exist', { 'ndrId': ndr.id, 'from': 'summary' }) }}" class="behat-link-edit">{{ 'edit' | trans({}, 'common') }}</a>
            </td>
        </tr>
    </tbody>
</table>

{# display title if assets are present #}
{% if ndr.assets %}
    <div class="grid-row">
        <div class="column-half">
            <h2 class="heading-medium flush--ends">List of assets</h2>
        </div>
        <div class="column-half text--right">
            <a href="{{ path('ndr_assets_type', { 'ndrId': ndr.id}) }}" class="bold-small move-quarter--up action-link behat-link-add">
                <span class="icon icon-plus"></span>
                {{ 'summaryPage.addButton' | trans }}
            </a>
        </div>
    </div>
{% endif %}

{# display assets in groups #}
{% for groupId, assetsInGroup in ndr.assetsGroupedByTitle %}
    {% if (groupId | lower) == 'property' %}
        {% include 'AppBundle:Ndr/Asset/Property:_list_item.html.twig' %}
    {% else %}
        {% include 'AppBundle:Ndr/Asset/Other:_list_item.html.twig'%}
    {% endif %}
{% endfor %}

{# Total #}
{% if ndr.assets %}
    <table class="check-your-answers push--top">
        <tr class="no-border">
            <td class="numeric-small hard--right">
                <span class="heading-medium behat-region-asset-total">Total value of assets: Â£{{ ndr.assetsTotalValue | money_format }}</span>
            </td>
        </tr>
    </table>
{% endif %}
