{% set httpPrefix = app.request.server.get('HTTP_REFERER')|split(':')[0] %}
{% if httpPrefix is empty %}
    {% set httpPrefix = 'http' %}
{% endif %}
{% set webPath = httpPrefix ~ '://' ~ app.request.host %}

{% set translationDomain = "email-template" %}
{% trans_default_domain translationDomain %}

