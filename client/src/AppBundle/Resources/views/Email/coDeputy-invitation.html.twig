{% extends 'AppBundle:Email:_template.html.twig' %}

{% set translationDomain = "email-coDeputy-invitation" %}
{% trans_default_domain translationDomain %}

{% set transOptions = {
'%deputyName%': deputyName,
} %}

{% block emailHTMLHeaderTitle %}{{ ('default.htmlHeaderTitle') | trans  }}{% endblock %}

{% block content %}

    <h2 style="Margin: 0 0 20px 0; padding: 0; font-size: 27px; line-height: 35px; font-weight: bold; color: #0B0C0C;">{{ ('default.heading') | trans  }}</h2>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">{{ ('default.beenInvited') | trans(transOptions)  }}</p>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">{{ ('default.needToSignUp') | trans  }}</p>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">
        <strong>{{ ('default.clickOnLink') | trans  }}</strong>
    </p>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">
        <a style="word-wrap: break-word;" href="{{ link }}">{{ link }}</a>
    </p>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">{{ ('default.thenAsked') | trans  }}</p>

    <ol style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">
        <li>{{ ('default.firstPoint') | trans  }}</li>
        <li>{{ ('default.secondPoint') | trans  }}</li>
        <li>{{ ('default.thirdPoint') | trans  }}</li>
    </ol>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">{{ ('default.ifLinkDoesntWork') | trans  }}</p>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">{{ ('default.linkExpires') | trans  }}</p>

{% endblock %}
