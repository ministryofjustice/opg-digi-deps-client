{% extends 'AppBundle:layouts:application.html.twig'%}

{% import 'AppBundle:macros:macros.html.twig' as macros %}

{% set translationDomain = "ndr-more-info" %}
{% trans_default_domain translationDomain %}
{% set transOptions = {'%client%': ndr.client.firstname | e } %}

{% block htmlTitle %}{{ 'startPage.htmlTitle' | trans }}{% endblock %}
{% block pageTitle %}{{ 'startPage.pageTitle' | trans }}{% endblock %}
{% block pageTitleClass %}heading-large{% endblock %}

{% block breadcrumbs %}{{ macros.breadcrumbs(ndr) }}{% endblock %}

{% block pageContent %}

    <div class="text">
        <p class="text">{{ 'startPage.pageSectionDescription1' | trans(transOptions) }}</p>
        <p class="text">{{ 'startPage.pageSectionDescription2' | trans(transOptions) }}</p>
        <p class="text">{{ 'startPage.pageSectionDescription3' | trans(transOptions)|raw }}</p>
    </div>

    <a href="{{ path('ndr_other_info_step', { 'ndrId': ndr.id, 'step': 1 }) }}" class="button button-start behat-link-start">{{ 'startPage.startButton' | trans }}</a>

    {# Pagination #}
    {% include 'AppBundle:report:_nextprevious.html.twig' with {
        'report': ndr,
        'sectionId': 'otherInfo',
    } %}

{% endblock %}
