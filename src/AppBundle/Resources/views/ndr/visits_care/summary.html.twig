{% extends 'AppBundle:layouts:application.html.twig'%}

{% import 'AppBundle:macros:macros.html.twig' as macros %}

{% set translationDomain = "ndr-visits-care" %}
{% trans_default_domain translationDomain %}
{% set transOptions = {'%client%': ndr.client.firstname | e } %}

{# Page Titles #}
{% block htmlTitle %}{{ 'summaryPage.htmlTitle' | trans }}{% endblock %}
{% block pageTitle %}{{ 'summaryPage.pageTitle' | trans }}{% endblock %}
{% block pageTitleClass %}heading-large{% endblock %}

{# Breadcrumbs #}
{% block breadcrumbs %}{{ macros.breadcrumbs(ndr) }}{% endblock %}

{% block pageContent %}

    <div class="grid-row">
        <div class="column-two-thirds">
            {# Introduction text #}
            <p class="text">
                 {{ 'summaryPage.weAskAbout' | trans(transOptions) }}
            </p>

            {# Check answers text #}
            <h2 class="heading-small">{{ 'weHaveListed' | trans(transOptions, 'common') }}</h2>
            <p class="text">{{ 'checkCorrect' | trans(transOptions, 'common') }}</p>

            {# Missing questions alerts #}
            {% if status.visitsCareState.state != 'done' and comingFromLastStep%}
                {{ macros.notification('notice', 'remindComplete' | trans(transOptions, 'common')) }}
            {% endif %}

            {% if status.visitsCareState.state != 'done' and not comingFromLastStep%}
                {{ macros.notification('notice', 'canYouAnswerNDR' | trans(transOptions, 'common')) }}
            {% endif %}
        </div>
        <div class="column-third">
            {{ macros.relatedSections(ndr, 'visitsCare') }}
        </div>
    </div>

    {# Return to overview link #}
    <p class="text--right flush--bottom">
        <a href="{{ path('ndr_overview', {'ndrId': ndr.id}) }}" class="bold-small">
            {{ 'returnToReport' | trans(transOptions, 'common') }}
        </a>
    </p>

    {# Questions and answers table #}
    {% include 'AppBundle:ndr/visits_care:_answers.html.twig' %}

    {# Pagination #}
    {% include 'AppBundle:report:_nextprevious.html.twig' with {
        'report': ndr,
        'sectionId': 'visitsCare',
    } %}

{% endblock %}



