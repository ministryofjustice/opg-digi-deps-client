{% extends 'AppBundle:layouts:application.html.twig' %}

{% import 'AppBundle:macros:macros.html.twig' as macros %}

{% set translationDomain = "client-notes" %}
{% trans_default_domain translationDomain %}
{% set page = "removeNote" %}

{% block htmlTitle %}{{ (page ~ '.htmlTitle') | trans }}{% endblock %}
{% block pageTitle %}{{ (page ~ '.pageTitle') | trans }}{% endblock %}
{% block pageTitleClass %}heading-large{% endblock %}

{% block supportTitleTop %}
    <span class="heading-secondary">{{ (page ~ '.supportTitle') | trans }} {{ client.fullname | title }}</span>
{% endblock %}

{% block breadcrumbs %}
    {{ macros.breadcrumbs(report) }}
{% endblock %}

{% block pageContent %}

    <p class="text"><strong class="bold">{{ (page ~ '.question') | trans }}</strong></p>
    <table class="text push--bottom">
        <tbody>
            <tr>
                <th scope="row">{{ (page ~ '.noteTitle') | trans }}</th>
                <td>{{ note.getTitle() }}</td>
            </tr>
            <tr>
                <th scope="row">{{ (page ~ '.dateAdded') | trans }}</th>
                <td>{{ note.getCreatedOn() | date('d F Y') }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('delete_note_confirm', { noteId: note.id }) }}" id="note-delete" class="button push-half--right behat-link-confirm">{{ (page ~ '.linkButtonLabel') | trans }}</a>

    <a href="{{ backLink }}" class="button-link behat-link-confirm-cancel">{{ 'cancel' | trans({}, 'common') }}</a>

{% endblock %}

