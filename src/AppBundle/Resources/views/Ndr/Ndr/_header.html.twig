{% set translationDomain = "ndr-overview" %}
{% trans_default_domain translationDomain %}

<h1 class="heading-xlarge flush--bottom behat-region-report-title">
    {{ 'heading.title' | trans }}
</h1>
<h2 class="heading-large flush--top">{{ client.fullname }}</h2>

{% if ndrStatus.isReadyToSubmit %}
    <div id="header-report-submit" class="hero hero-small">
        <h2 class="heading">{{ 'ndrReady' | trans }}</h2>
        <div class="message"><a class="button behat-link-ndr-submit" href="{{ path('ndr_review', {'ndrId': ndr.id}) }}">{{ 'continue' | trans({}, 'common') }}</a></div>
    </div>
{% endif %}
