{% extends 'AppBundle:Layouts:application.html.twig' %}

{% import 'AppBundle:Macros:macros.html.twig' as macros %}

{% set translationDomain = "ndr-debts" %}
{% trans_default_domain translationDomain %}
{% set transOptions = {'%client%': ndr.client.firstname | e } %}

{# Page Titles #}
{% block htmlTitle %}{{ 'startPage.htmlTitle' | trans(transOptions) }}{% endblock %}
{% block pageTitle %}{{ 'startPage.pageTitle' | trans(transOptions) }}{% endblock %}
{% block pageTitleClass %}heading-large{% endblock %}

{# Breadcrumbs #}
{% block breadcrumbs %}{{ macros.breadcrumbs(ndr) }}{% endblock %}

{% block pageContent %}

    <div class="grid-row">
        <div class="column-two-thirds">
            {# Introduction text #}
            <p class="text">
                 {{ 'summaryPage.weAskAbout' | trans(transOptions) }}
            </p>

            {# Check answers text #}
            <h2 class="heading-small">{{ 'weHaveListed' | trans(transOptions, 'common') }}</h2>
            <p class="text">{{ 'checkCorrect' | trans(transOptions, 'common') }}</p>

            {# Missing questions alerts #}
            {% if status.debtsState.state != 'done' and comingFromLastStep%}
                {{ macros.notification('notice', 'remindComplete' | trans(transOptions, 'common')) }}
            {% endif %}

            {% if status.debtsState.state != 'done' and not comingFromLastStep%}
                {{ macros.notification('notice', 'canYouAnswerNDR' | trans(transOptions, 'common')) }}
            {% endif %}
        </div>
        <div class="column-third">
            {{ macros.relatedSections(ndr, 'debts') }}
        </div>
    </div>

    {# Questions and answers table #}
    <table class="check-your-answers columns-2 push-double--bottom">
        <thead>
            <tr>
                <th>{{ 'question' | trans({}, 'common') }}</th>
                <th>{{ 'answer' | trans({}, 'common') }}</th>
                <th>
                    <span class="visually-hidden">{{ 'actions' | trans({}, 'common') }}</span>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr class="behat-region-has-debts">
                <td>
                    {{ 'existPage.form.exist.label' | trans(transOptions) }}
                </td>
                <td>
                    {{ ndr.hasDebts == 'yes' ? 'Yes': 'No' }}
                </td>
                <td class="change-answer">
                    <a href="{{ path('ndr_debts_exist', {'ndrId': ndr.id, 'from': 'summary'}) }}" class="action-link behat-link-edit">{{ 'edit' | trans({}, 'common' ) }}</a>
                </td>
            </tr>
        </tbody>
    </table>

    {% if ndr.hasDebts == 'yes' %}

        {# Items list heading #}
        <div class="grid-row  behat-region-debts-list">
            <div class="column-half">
                <h2 class="heading-medium flush--ends">List of debts</h2>
            </div>
            <div class="column-half text--right">
                <a href="{{ path('ndr_debts_edit', {'ndrId': ndr.id, 'from': 'summary'}) }}" class="bold-small action-link  behat-link-edit">{{ 'edit' | trans({}, 'common' ) }}</a>
            </div>
        </div>

        {# Items list table #}
        <table class="check-your-answers columns-2">
            <thead>
                <tr>
                    <th>Description</th>
                    <th class="numeric">Amount</th>
                </tr>
            </thead>
            <tbody>
            {% for debt in ndr.debts %}
                <tr class="behat-region-debt-{{ debt.debtTypeId | behat_namify }}">
                    <td> {{ ('form.entries.' ~ debt.debtTypeId ~ '.label') | trans(transOptions) }}</td>
                    <td class="numeric-small">£{{ debt.amount | money_format }}</td>
                </tr>
            {% endfor %}
            <tr>
                <td class="no-border">
                    <span class="bold-small">Total amount</span>
                </td>
                <td class="no-border text--right">
                    <span class="bold-small">£{{ ndr.debtsTotalAmount | money_format }}</span>
                </td>
            </tr>
            </tbody>
        </table>

        <table class="check-your-answers columns-2 push--top">
            <thead>
                <tr>
                    <th>{{ 'question' | trans({}, 'common') }}</th>
                    <th>{{ 'answer' | trans({}, 'common') }}</th>
                    <th>
                        <span class="visually-hidden">{{ 'actions' | trans({}, 'common') }}</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% set debtOther = ndr.getDebtById('other') %}
                {% if debtOther.moreDetails %}
                    <tr class="behat-region-debt-other-more-details">
                        <td>{{ 'summaryPage.moreAbout' | trans(transOptions | merge({'%amount%': debtOther.amount })) }}</td>
                        <td>{{ debtOther.moreDetails | nl2br }}</td>
                        <td class="change-answer">
                            <a href="{{ path('ndr_debts_edit', {'ndrId': ndr.id, 'from': 'summary'}) }}" class="action-link">{{ 'edit' | trans({}, 'common' ) }}</a>
                        </td>
                    </tr>
                {% endif %}
                <tr class="behat-region-debt-management-details">
                    {% if ndr.debtManagement %}
                        <td>{{ 'managementPage.form.debtManagement.label' | trans }}</td>
                        <td>{{ ndr.debtManagement | nl2br }}</td>
                    {% else %}
                        <td><span class="error">{{ 'managementPage.form.debtManagement.label' | trans }}</span></td>
                        <td> <span class="error-message">{{ 'pleaseAnswer' | trans({}, 'common' ) }}</span></td>
                    {% endif %}
                    <td class="change-answer">
                        <a href="{{ path('ndr_debts_management', {'ndrId': ndr.id, 'from': 'summary'}) }}" class="behat-link-edit-debt-management action-link">{{ 'edit' | trans({}, 'common' ) }}</a>
                    </td>
                </tr>
            </tbody>
        </table>
    {% endif %}

    {# Pagination #}
    {% include 'AppBundle:report:_nextprevious.html.twig' with {
        'report': ndr,
        'sectionId': 'debts',
    } %}

{% endblock %}
