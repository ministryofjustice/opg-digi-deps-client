{% extends 'AppBundle:Layouts:application.html.twig' %}

{% import 'AppBundle:Macros:macros.html.twig' as macros %}

{% set translationDomain = "ndr-debts" %}
{% trans_default_domain translationDomain %}
{% set transOptions = {'%client%': ndr.client.firstname | e } %}

{% block htmlTitle %}{{ 'managementPage.htmlTitle' | trans(transOptions) }}{% endblock %}
{% block pageTitle %}{{ 'managementPage.pageSectionTitle' | trans(transOptions) }}{% endblock %}
{% block pageTitleClass %}heading-large{% endblock %}

{% block linkBack %}
{{ macros.linkBackStep(backLink, 'back' | trans({}, 'common')) }}
{% endblock %}

{% block pageContent %}

    {{ form_start(form, {attr: {novalidate: 'novalidate' }}) }}

        <div class="form-section push--bottom">


            {{  form_input(form.debtManagement,'managementPage.form.debtManagement', {
                'labelClass': 'form-label-bold',
                'formGroupClass': 'flush--bottom',
                'labelRaw': true
            }) }}

        </div>

        {{ macros.saveAndContinueButton(form.save) }}

        {% if skipLink %}
            <a href="{{ skipLink }}" class="button-link behat-link-step-skip">{{ 'stepPage.skipLink' | trans({}, 'common') }}</a>
        {% endif %}

    {{ form_end(form) }}

{% endblock %}
