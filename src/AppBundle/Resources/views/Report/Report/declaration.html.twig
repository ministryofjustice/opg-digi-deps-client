{% extends 'AppBundle:Layouts:application.html.twig' %}

{% import 'AppBundle:Macros:macros.html.twig' as macros %}

{% set translationDomain = "report-declaration" %}
{% trans_default_domain translationDomain %}

{% block htmlTitle %}{{ 'page.htmlTitle' | trans }}{% endblock %}
{% block pageTitle %}{{ 'page.pageSectionTitle' | trans }}{% endblock %}

{% block breadcrumbs %}
    {{ macros.breadcrumbs(report) }}
{% endblock %}

{% block pageContent %}

    <div class="text">
        <p>{{ 'page.descriptionPara01' | trans }}</p>
        <p>{{ 'page.descriptionPara02' | trans }}</p>
        <p>{{ 'page.descriptionPara03' | trans }}</p>
        <p>{{ 'page.descriptionPara04' | trans }}</p>
    </div>

    {{ form_start(form, {attr: {novalidate: 'novalidate', class: 'push--bottom' }}) }}

    {{ form_checkbox(form.agree, 'agree', { 'labelClass': 'required' }) }}

    <div class="form-group push-half--bottom {% if not form.agreedBehalfDeputy.vars.valid %}form-group-error{% endif %}">
        {{ form_checkbox_group(form.agreedBehalfDeputy, 'agreedBehalfDeputy', {
            'useFormGroup': false,
            'fieldSetClass' : 'radio-agreed-behalf-deputy',
            'legendClass' : 'form-label-bold',
            'items': [
                {},
                {},
                {'dataTarget': 'agreed-behalf-deputy-explanation-section' }
            ]
        }) }}

        <div id="agreed-behalf-deputy-explanation-section" class="panel panel-border-narrow js-hidden">
            {{ form_input(form.agreedBehalfDeputyExplanation,'agreedBehalfDeputyExplanation') }}
        </div>

    </div>

    <div class="form-group push-half--top">
        {{ form_submit(form.save,'save') }}
    </div>

    {{ form_end(form) }}

    {{ macros.notification('notice', 'unableToEditAfterSubmission' | trans()) }}

{% endblock %}
