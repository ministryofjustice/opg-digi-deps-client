{% extends 'AppBundle:Layouts:application.html.twig' %}

{% set translationDomain = "report-submitted" %}
{% trans_default_domain translationDomain %}

{% block pageTitle %}{{ 'page.htmlTitle' | trans }}{% endblock %}
{% block contentClass %}{{ parent() }} report-submission report-overview js-report-assets-input{% endblock %}

{% set clientTrans = {'%client%': report.client.firstname} %}

{% block pageContent %}

    <div id="pagebody">
        <div id="pagebody-left-content">

            {#<div id="page-section-title-container" class="page-section-title-container">#}
                {#<h1>{{ 'page.pageSectionTitle' | trans(clientTrans) }}</h1>#}
            {#</div>#}

            <div id="header-report-submit" class="hero">
                <h2 class="heading">
                    <span class="icon icon-tick-white"></span>
                    {{ 'greenBox.reportSubmitted' | trans }}
                </h2>
                <h3 class="message">
                    {{ 'greenBox.subtitle' | trans({'%submitDate%': (report.submitDate | date("j F Y")) }) }}
                </h3>
            </div>

            <p class="">{{ 'weHaveSentEmail' | trans }}</p>

            <!-- what happens next -->
            <h3 class="heading-medium page-section-description">{{ 'whatHappensNext.title' | trans }}</h3>
            <p>{{ 'whatHappensNext.body1' | trans }}</p>
            <p>{{ 'whatHappensNext.body2' | trans }}</p>
            <p>{{ 'whatHappensNext.body3' | trans({
                    '%linkStart%': '<a href="'~  path('report_overview', {'reportId': newReportId}) ~'" target="_blank">',
                    '%linkEnd%': '</a>'
                }) | raw }}</p>

            <!-- Give us feedback -->
            <h3 class="heading-medium page-section-description">{{ 'giveUsFeedback.title' | trans }}</h3>
            <p>{{ 'giveUsFeedback.body1' | trans({
                    '%linkStart%': '<a href="https://www.surveymonkey.co.uk/r/H2ZH57Y" target="_blank">',
                    '%linkEnd%': '</a>'
                }) | raw }}</p>
            <p>{{ 'giveUsFeedback.body2' | trans }}</p>
            <p>{{ 'giveUsFeedback.body3' | trans }}</p>

            <!-- need help -->
            <h3 class="heading-medium page-section-description">{{ 'needHelp.title' | trans }}</h3>
            <p>{{ 'needHelp.body' | trans() }}</p>

        </div>

        <div id="pagebody-right-content">
            <p id="helpline" class="push-half--bottom">Helpline<br>0115 934 2700</p>
            {% include 'AppBundle:Report/Report:_status.html.twig' with {
            showReviewButton: false
            } %}
        </div>
    </div>
{% endblock %}
