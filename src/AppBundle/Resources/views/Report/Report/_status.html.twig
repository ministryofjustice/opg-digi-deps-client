{% set translationDomain = "overview" %}
{% trans_default_domain translationDomain %}

{% set showReviewButton = showReviewButton is defined ? showReviewButton : true %}

<div id="report-status" class="{{ reportStatus.status }}">

    <div class="labelsvalues">
        {% if report.getSubmitted %}
            <div class="labelvalue">
                <div class="label">Submitted:</div>
                <div class="value">{{ report.submitDate | date("j F Y") }}</div>
            </div>
            <p class="flush--bottom">
                <a href="{{ path('report_pdf', {'reportId': report.id}) }}">{{ 'status.downloadACopy' | trans({}, 'report-submitted') }}</a>
            </p>
            <p>
                <a href="{{ path('report_review', {'reportId': report.id}) }}">{{ 'status.viewReportOnline' | trans({}, 'report-submitted') }}</a>
            </p>
        {% else %}
            <div class="labelvalue">
                <div class="label">Progress:</div>
                <div class="value">{{ reportStatus.remainingSections | length }} {{ 'sectionsRemaining' | trans() }}</div>
            </div>

            <div class="labelvalue">
                <div class="label">Status:</div>
                <div class="value">{{ reportStatus.status | trans() }}</div>
            </div>
        {% endif %}
    </div>

</div>
