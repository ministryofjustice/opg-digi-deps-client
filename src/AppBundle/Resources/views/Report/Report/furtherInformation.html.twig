{% embed 'AppBundle:Components/Page:page-report.html.twig' %}
    {% set translationDomain = "report-further-information" %}
    {% trans_default_domain translationDomain %}

    {% block htmlTitle %}{{ 'page.htmlTitle' | trans }}{% endblock %}
    {% block pageTitle %}{{ 'page.pageSectionTitle' | trans }}{% endblock %}
    {% block contentClass %}{{ parent() }} report-declaration js-report-assets-input{% endblock %}

    {% block pageNavigation %}
        {# no navigation bar for declaration #}
    {% endblock %}

    {% block pageBody %}

        {% if action == 'edit' %}
          {% include 'AppBundle:Report/Report:_furtherInformationEdit.html.twig' %}
        {% endif %}

        {% if action == 'view' %}
          {% include 'AppBundle:Report/Report:_furtherInformationView.html.twig' %}
        {% endif %}

    {% endblock %}

{% endembed %}
