<div class="balance subsection">

    <div class="box box-heading">
        <h3 class="flush--bottom text--center">Accounts balanced</h3>
    </div>

    <div class="half-width tight">
        <div class="box flush">
            <div class="message short">Total money in and money out:</div>
            <div class="total">&pound;{{ report.calculatedBalance | money_format }}</div>
        </div>
    </div>

    <div class="half-width tight last">
        <div class="box flush">
            <div class="message short">Total balance from all bank accounts:</div>
            <div class="total">&pound;{{ report.accountsClosingBalanceTotal | money_format }}</div>
        </div>
    </div>

</div>
