                    <input type="number" id="report_edit_startDate_day" name="report_edit[startDate][day]" required="required" class="form-control js-limit-chars-2" min="0" max="31" pattern="[0-9]*">
                </div>

                <div class="form-group form-group-month">
                    <label for="report_edit_startDate_month" class="required">Month</label>
                    <input type="number" id="report_edit_startDate_month" name="report_edit[startDate][month]" required="required" class="form-control js-limit-chars-2" min="0" max="12" pattern="[0-9]*">
                </div>

