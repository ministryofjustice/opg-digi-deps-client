{% extends 'AppBundle:Layouts:application.html.twig' %}

{% block htmlTitle %}Alerts - Digideps Style Guide{% endblock %}
{% block pageTitle %}Alerts{% endblock %}

{% block supportTitleTop %}
    <span class="heading-secondary">Digideps style guide</span>
{% endblock %}

{% block helpline %}{% endblock %}

{% block breadcrumbs %}
    <div class="breadcrumbs hard--bottom">
        <ol class="group">
            <li><a href="/elements">Digideps style guide</a></li>
            <li>Alerts</li>
        </ol>
    </div>
{% endblock %}

{% block pageContent %}
<link href="/prism/prism.css" rel="stylesheet" type="text/css"/>

<div class="grid-row">
    <div class="column-full">
        <div class="example">

            <div class="alert-notice panel panel-border-narrow">
                <span class="icon icon-notification"></span>
                <div class="alert-message"><p>This is a notice</p></div>
            </div>

            <div class="alert-success panel panel-border-narrow">
                <span class="icon icon-tick"></span>
                <div class="alert-message"><p>This is success</p></div>
            </div>

            <div class="alert-error panel panel-border-narrow">
                <span class="icon icon-cross"></span>
                <div class="alert-message"><p>This is an error</p></div>
            </div>

            <div class="alert-info panel panel-border-narrow">
                <span class="icon icon-information"></span>
                <div class="alert-message"><p>This is information</p></div>
            </div>

            <div class="alert-info panel panel-border-narrow">
                <span class="icon icon-loader"></span>
                <div class="alert-message"><p>This is a loader</p></div>
            </div>

            <div class="alert-important panel panel-border-narrow">
                <span class="icon icon-important-small"></span>
                <div class="alert-message"><p>This is important</p></div>
            </div>

            <div class="alert panel panel-border-narrow">
                <div class="alert-message"><p>This is default</p></div>
            </div>

        </div>

