{% extends 'AppBundle:email:_template.html.twig' %}

{% set translationDomain = "email-user-activate" %}
{% trans_default_domain translationDomain %}

{% block emailHTMLHeaderTitle %}{{ ('default.htmlHeaderTitle') | trans  }}{% endblock %}

{% block content %}

    <h2 style="Margin: 0 0 20px 0; padding: 0; font-size: 27px; line-height: 35px; font-weight: bold; color: #0B0C0C;">{{ ('default.heading') | trans  }}</h2>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">{{ (recipientRole ~ '.youAreRegistered') | trans  }}</p>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">
        <strong>{{ ('default.clickOnLink') | trans  }}</strong>
    </p>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">
        <a style="word-wrap: break-word;" href="{{ link }}">{{ link }}</a>
    </p>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">{{ ('default.ifLinkDoesntWork') | trans  }}</p>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">
        <strong>{{ (recipientRole ~ '.youMustActivate') | trans  }}</strong>
    </p>

    <p style="Margin: 0 0 20px 0; font-size: 19px; line-height: 25px; color: #0B0C0C;">{{ (recipientRole ~ '.linkExpires') | trans({'%homepageUrl%': homepageUrl}) | raw  }}</p>

{% endblock %}
