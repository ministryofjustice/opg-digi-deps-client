{% extends 'AppBundle:Layouts:application.html.twig' %}

{% set translationDomain = "odr-submitted" %}
{% trans_default_domain translationDomain %}

{% block pageTitle %}{{ 'page.htmlTitle' | trans }}{% endblock %}
{% block contentClass %}{{ parent() }} report-submission report-overview js-report-assets-input{% endblock %}

{% set clientTrans = {'%client%': odr.client.firstname} %}

{% block pageContent %}

    <div id="page-section-title-container" class="page-section-title-container">
        <h1>{{ 'page.pageSectionTitle' | trans(clientTrans) }}</h1>
    </div>


    <div id="pagebody">
        <div id="pagebody-left-content">

            <div id="header-report-submit" class="hero">
                <h2 class="heading">{{ 'reportSubmitted' | trans }}</h2>
            </div>

            <p class="">{{ 'weHaveSentEmail' | trans }}</p>

            <hr>

            <!-- what happens next -->
            <p class="page-section-description">{{ 'whatHappensNext.title' | trans }}</p>
            <p>{{ 'whatHappensNext.body1' | trans }}</p>
            <p>{{ 'whatHappensNext.body2' | trans }}</p>
            <a href="{{ path('odr_index') }}" class="button">
                {{ 'whatHappensNext.returnButton' | trans }}
            </a>

            <hr>

            <!-- Give us feedback -->
            <p class="page-section-description">{{ 'giveUsFeedback.title' | trans }}</p>
            <p>{{ 'giveUsFeedback.body1' | trans }}</p>
            <p>{{ 'giveUsFeedback.body2' | trans({
                    '%linkStart%': '<a href="https://www.surveymonkey.co.uk/r/H2ZH57Y" target="_blank">',
                    '%linkEnd%': '</a>'
                }) | raw }}</p>

        </div>

        <div id="pagebody-right-content">
            {% include 'AppBundle:Odr/Index:_status.html.twig' with {
            showReviewButton: false
            } %}
        </div>
    </div>
{% endblock %}
