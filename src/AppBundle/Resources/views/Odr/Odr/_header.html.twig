{% set translationDomain = "odr-overview" %}
{% trans_default_domain translationDomain %}

<h1 class="heading-xlarge flush--bottom behat-region-report-title">
    {{ 'heading.title' | trans }}
</h1>
<h2 class="heading-large flush--top">{{ client.fullname }}</h2>

{% if odrStatus.isReadyToSubmit %}
    <div id="header-report-submit" class="hero hero-small">
        <h2 class="heading">{{ 'odrReady' | trans }}</h2>
        <div class="message"><a class="button behat-link-odr-submit" href="{{ path('odr_review', {'odrId': odr.id}) }}">{{ 'continue' | trans({}, 'common') }}</a></div>
    </div>
{% endif %}