{% set translationDomain = "odr-homepage" %}
{% trans_default_domain translationDomain %}
{% set transOptions = {'%client%': client.firstname} %}

<h2 class="heading-large">New deputy report</h2>

<div class="card soft-half push-double--bottom">
    <span class="status status-corner {{ odrStatus.status }}">{{ (odrStatus.status) | trans({}, 'common') }}</span>
    <h3 class="heading-medium flush--top">{{ client.firstname }} {{ client.lastname }}</h3>
    <div class="card-body soft-half--top">
        <p class="text flush--bottom">{{ ('odr.instructions') | trans(transOptions) }}</p>
    </div>
    <div class="card-actions">
	    <a href="{{ path('odr_overview', {'odrId': odr.id}) }}" class="button right behat-link-odr-start">{{ ('status.' ~ odrStatus.status) | trans({}, 'common') }}</a>
    </div>
</div>