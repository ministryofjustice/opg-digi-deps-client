<div id="balance">

    <div class="hero">
        <h2 class="heading">Accounts not balanced</h2>
    </div>

    <div class="hero third-width first">
        <div class="message">Total balance after money in and money out:</div>
        <div class="total">&pound;{{ odr.calculatedBalance | money_format }}</div>
    </div>

    <div class="hero third-width">
        <div class="message">Total balance of all bank accounts:</div>
        <div class="total">&pound;{{ odr.accountsClosingBalanceTotal | money_format }}</div>
    </div>

    <div class="hero third-width">
        <div class="message">Difference:</div>
        <div class="total">&pound;{{ odr.totalsOffset | abs | money_format }}</div>
    </div>

</div>

<h2 class="section-heading sub-title">
    Reason for accounts not balancing
</h2>
<div class="bordered">
    {{ odr.balanceMismatchExplanation | nl2br }}
</div>
