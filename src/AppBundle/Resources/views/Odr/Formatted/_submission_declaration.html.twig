{% set translationDomain = "odr-declaration" %}
{% trans_default_domain translationDomain %}
{% if odr.submitted %}

<div class="section">
    <h2 class="section-heading">{{ 'page.pageTitle' | trans }}</h2>
    <div class="box behat-region-deputy-declaration">

        <p class="label">{{ 'page.descriptionPara01' | trans }}</p>
        <p class="label">{{ 'page.descriptionPara02' | trans }}</p>
        <p class="label">{{ 'page.descriptionPara03' | trans }}</p>
        <p class="label">{{ 'page.descriptionPara04' | trans }}</p>

        <dl class="labelvalue">
            <dt class="label">Declaration</dt>
            <dd class="value" id="declarationString">
                {{ ('agreedBehalfDeputy.' ~ odr.agreedBehalfDeputy) | trans() }}
            </dd>
            {% if (odr.agreedBehalfDeputy == 'more_deputies_not_behalf') %}
                <dt class="label">Reason</dt>
                <dd class="value">{{ odr.agreedBehalfDeputyExplanation | nl2br }}</dd>
            {% endif %}
            <dt class="label">Declaration time</dt>
            <dd class="value">{{odr.submitDate | date("H:i") }}&nbsp;&nbsp;&nbsp;{{odr.submitDate | date("d/m/Y") }}</dd>
            <dt class="label">Deputy name</dt>
            <dd class="value" id="statusDeputyName">{{ app.user.fullname }}</dd>
        </dl>
    </div>
</div>
{% endif %}
