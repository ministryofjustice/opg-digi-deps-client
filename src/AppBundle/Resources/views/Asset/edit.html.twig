{% set translationDomain = "report-assets" %}
{% trans_default_domain translationDomain %}

{% extends 'AppBundle:Asset:layout-assets.html.twig'  %}

{% block maincontent %}

    <p class="page-section-description">{{ 'page.pageSectionDescription' | trans({'%client%': report.client.firstname}, translationDomain) }}</p>

    {{ form_start(form, {attr: {novalidate: 'novalidate' } }) }}

    <h3 class="heading-medium">{{ ('page.subSectionTitleEdit.' ~ assetToEdit.type) | trans({}, translationDomain) }}</h3>

    {{ form_errors_list(form) }}

    {% include 'AppBundle:Asset/' ~ assetToEdit.type ~ ':_form_fields.html.twig' with {
                'form': form,
             } %}

    {% include 'AppBundle:Components/ButtonBar:_save_bar.html.twig' with {
                transDomain: translationDomain,
                section: 'asset'
            } %}


    {{ form_end(form) }}


{% endblock %}