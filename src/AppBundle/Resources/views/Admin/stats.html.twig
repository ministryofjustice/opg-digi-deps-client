{% extends 'AppBundle:Components/Page:page-admin.html.twig' %}

{% trans_default_domain "admin" %}

{% block htmlTitle %}Administration - Upload users{% endblock %}
{% block pageTitle %}Upload users{% endblock %}

{% block validationSummary %}
{% endblock %}

{% block pageNavigation %}
{% endblock %}

{% block pageBody %}

    <h1 class="heading-medium">Deputy's analysis</h1>

    <p>Limited to last 100 users. Download the CSV to get the full list</p>
    <img width="17" height="16" title="CSV" alt="CSV" src="data:image/gif;base64," />
    <a href="{{ path('admin_stats_csv') }}">Export to CSV</a>


    {# dynamically display data #}
    <table class="stats">
        {# header #}
        <thead>
        <tr>
            {% for key, column in data|first %}
                <th>{{ key  | replace({'_': ' '}) | capitalize }}</th>
            {% endfor %}
        </tr>
        </thead>
        <tbody>
        {# rows #}
        {% for row in data %}
            <tr>
                {% for column in row %}
                    <td>
                        {{ column }}
                    </td>
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
    </table>



{% endblock %}
