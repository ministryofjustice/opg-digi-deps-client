            <table class="checkboxes labelvalue inline">
                <tbody>
                    <tr>
                        <td class="checkbox value">{% if checklist.consultationsSatisfactory == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                        <td class="checkbox value">{% if checklist.consultationsSatisfactory == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="section">
