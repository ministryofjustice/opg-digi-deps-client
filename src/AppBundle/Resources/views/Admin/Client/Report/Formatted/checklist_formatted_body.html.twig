                <h3 class="label question bold">{{ (page ~ '.form.assetsDeclaredAndManaged.label') | trans({}, 'admin-checklist') }}</h3>

                <table class="checkboxes labelvalue inline">
                    <tbody>
                        <tr>
                            <td class="checkbox value">{% if checklist.assetsDeclaredAndManaged == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                            <td class="checkbox value">{% if checklist.assetsDeclaredAndManaged == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                            <td class="checkbox value">{% if checklist.assetsDeclaredAndManaged == 'na' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'notApplicable' | trans({}, 'common' ) }}</td>
                        </tr>
                    </tbody>
                </table>

                <h3 class="label question bold">{{ (page ~ '.form.debtsManaged.label') | trans({}, 'admin-checklist') }}</h3>

                <table class="checkboxes labelvalue inline">
                    <tbody>
                        <tr>
                            <td class="checkbox value">{% if checklist.debtsManaged == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
