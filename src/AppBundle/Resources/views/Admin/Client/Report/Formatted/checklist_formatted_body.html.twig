{% set page = 'checklistPage' %}
<style type="text/css" media="screen, print">
    {% include 'AppBundle:Css:formatted-report.css.twig' %}
</style>

<div id="wrapper">
    <div class="formatted-report">

        <div id="report-header">Office of the Public Guardian</div>
        <h1>Lodging checklist</h1>

        <p class="push--bottom">
            <strong>{{ 'client' | trans({}, 'common' ) }}:</strong> {{ report.client.fullName }}<br/>
            <strong>{{ 'caseNumber' | trans({}, 'common' ) }}:</strong> {{ report.client.caseNumber }}<br/>
            <strong>{{ 'reportingPeriod' | trans({}, 'common' ) }}:</strong> {{ report.startDate | date("j F Y") }} - {{ report.endDate | date("j F Y") }}<br/>
        </p>

        <div class="section">
            <h2 class="section-heading">{{ (page ~ '.heading.info') | trans({}, 'admin-checklist') }}</h2>


            <h3 class="label question bold">{{ (page ~ '.form.reportingPeriodAccurate.label') | trans({}, 'admin-checklist') }}</h3>

            <table class="checkboxes labelvalue inline">
                <tbody>
                    <tr>
                        <td class="checkbox value">{% if checklist.reportingPeriodAccurate == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                        <td class="checkbox value">{% if checklist.reportingPeriodAccurate == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                    </tr>
                </tbody>
            </table>

            {# DDPB-2293 question not relevant for PA #}
            {% if not report.hasSection('paDeputyExpenses') %}

                <h3 class="label question bold">{{ (page ~ '.form.contactDetailsUptoDate.label') | trans({}, 'admin-checklist') }}</h3>

                <table class="checkboxes labelvalue inline">
                    <tbody>
                        <tr>
                            <td class="checkbox value">{% if checklist.contactDetailsUptoDate == true %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                        </tr>
                    </tbody>
                </table>

                <h3 class="label question bold">{{ (page ~ '.form.deputyFullNameAccurateinCasrec.label') | trans({}, 'admin-checklist') }}</h3>

                <table class="checkboxes labelvalue inline">
                    <tbody>
                        <tr>
                            <td class="checkbox value">{% if checklist.deputyFullNameAccurateinCasrec == true %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                        </tr>
                    </tbody>
                </table>

            {% endif %}

        </div>

        <div class="section">
            <h2 class="section-heading">{{ (page ~ '.heading.decisions') | trans({}, 'admin-checklist') }}</h2>

            <h3 class="label question bold">{{ (page ~ '.form.decisionsSatisfactory.label') | trans({}, 'admin-checklist') }}</h3>

            <table class="checkboxes labelvalue inline">
                <tbody>
                    <tr>
                        <td class="checkbox value">{% if checklist.decisionsSatisfactory == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                        <td class="checkbox value">{% if checklist.decisionsSatisfactory == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="section">
