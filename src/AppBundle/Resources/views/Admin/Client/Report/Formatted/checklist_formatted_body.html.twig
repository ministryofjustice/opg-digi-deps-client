                            <td class="checkbox value">{% if checklist.debtsManaged == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                            <td class="checkbox value">{% if checklist.debtsManaged == 'na' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'notApplicable' | trans({}, 'common' ) }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        {% endif %}

        {% if report.hasSection('moneyInShort') or report.hasSection('moneyOutShort') or report.hasSection('deputyExpenses') or report.hasSection('paDeputyExpenses') %}
            <div class="section">
                <h2 class="section-heading">{{ (page ~ '.heading.money') | trans({}, 'admin-checklist') }}</h2>

                <h3 class="label question bold">{{ (page ~ '.form.openClosingBalancesMatch.label') | trans({}, 'admin-checklist') }}</h3>

                <table class="checkboxes labelvalue inline">
                    <tbody>
                        <tr>
                            <td class="checkbox value">{% if checklist.openClosingBalancesMatch == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                            <td class="checkbox value">{% if checklist.openClosingBalancesMatch == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                            <td class="checkbox value">{% if checklist.openClosingBalancesMatch == 'na' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'notApplicable' | trans({}, 'common' ) }}</td>
                        </tr>
                    </tbody>
                </table>

                {% if report.hasSection('paDeputyExpenses') or report.hasSection('profDeputyCosts') %}
                    {% set nonLayAppend = 'NonLay' %}
                {% else %}
                    {% set nonLayAppend = '' %}
                {% endif %}

                <h3 class="label question bold">{{ (page ~ '.form.accountsBalance' ~ nonLayAppend ~ '.label') | trans({}, 'admin-checklist') }}</h3>

                <table class="checkboxes labelvalue inline">
                    <tbody>
                        <tr>
                            <td class="checkbox value">{% if checklist.accountsBalance == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                            <td class="checkbox value">{% if checklist.accountsBalance == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                            <td class="checkbox value">{% if checklist.accountsBalance == 'na' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'notApplicable' | trans({}, 'common' ) }}</td>
                        </tr>
                    </tbody>
                </table>

                <h3 class="label question bold">{{ (page ~ '.form.moneyMovementsAcceptable.label') | trans({}, 'admin-checklist') }}</h3>

                <table class="checkboxes labelvalue inline">
                    <tbody>
                        <tr>
                            <td class="checkbox value">{% if checklist.moneyMovementsAcceptable == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                            <td class="checkbox value">{% if checklist.moneyMovementsAcceptable == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                            <td class="checkbox value">{% if checklist.moneyMovementsAcceptable == 'na' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'notApplicable' | trans({}, 'common' ) }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        {% endif %}

        {% if report.hasSection('bankAccounts') %}
            <div class="section">
            {% if report.hasSection('paDeputyExpenses') %}
                <h2 class="section-heading">{{ (page ~ '.heading.paFeeExpenses') | trans({}, 'admin-checklist') }}</h2>

                <h3 class="label question bold">{{ (page ~ '.form.deputyChargeAllowedByCourt.label') | trans({}, 'admin-checklist') }}</h3>

                <table class="checkboxes labelvalue inline">
                    <tbody>
                    <tr>
                        <td class="checkbox value">{% if checklist.deputyChargeAllowedByCourt == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                        <td class="checkbox value">{% if checklist.deputyChargeAllowedByCourt == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                    </tr>
                    </tbody>
                </table>

                <h3 class="label question bold">{{ (page ~ '.form.satisfiedWithPaExpenses.label') | trans({}, 'admin-checklist') }}</h3>

                <table class="checkboxes labelvalue inline">
                    <tbody>
                    <tr>
                        <td class="checkbox value">{% if checklist.satisfiedWithPaExpenses == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                        <td class="checkbox value">{% if checklist.satisfiedWithPaExpenses == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                        <td class="checkbox value">{% if checklist.satisfiedWithPaExpenses == 'na' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'notApplicable' | trans({}, 'common' ) }}</td>
                    </tr>
                    </tbody>
                </table>
            {% else %}
                <h2 class="section-heading">{{ (page ~ '.heading.bonds') | trans({}, 'admin-checklist') }}</h2>

                <h3 class="label question bold">{{ (page ~ '.form.bondAdequate.label') | trans({}, 'admin-checklist') }}</h3>

                <table class="checkboxes labelvalue inline">
                    <tbody>
                        <tr>
                            <td class="checkbox value">{% if checklist.bondAdequate == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                            <td class="checkbox value">{% if checklist.bondAdequate == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                            <td class="checkbox value">{% if checklist.bondAdequate == 'na' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'notApplicable' | trans({}, 'common' ) }}</td>
                        </tr>
                    </tbody>
                </table>

                <h3 class="label question bold">{{ (page ~ '.form.bondOrderMatchCasrec.label') | trans({}, 'admin-checklist') }}</h3>

                <table class="checkboxes labelvalue inline">
                    <tbody>
                        <tr>
                            <td class="checkbox value">{% if checklist.bondOrderMatchCasrec == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                            <td class="checkbox value">{% if checklist.bondOrderMatchCasrec == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                            <td class="checkbox value">{% if checklist.bondOrderMatchCasrec == 'na' %}X{% else %}&nbsp;{% endif %}</td>
                            <td class="label">{{ 'notApplicable' | trans({}, 'common' ) }}</td>
                        </tr>
                    </tbody>
                </table>
            {% endif %}
            </div>
        {% endif %}

        {% if report.hasSection('profDeputyCosts') %}
        <div class="section">
            <h2 class="section-heading">{{ (page ~ '.heading.profDeputyCosts') | trans({}, 'admin-checklist') }}</h2>
            
            <h3 class="label question bold">{{ (page ~ '.form.paymentsMatchCostCertificate.label') | trans({}, 'admin-checklist') }}</h3>

            <table class="checkboxes labelvalue inline">
                <tbody>
                    <tr>
                        <td class="checkbox value">{% if checklist.paymentsMatchCostCertificate == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                        <td class="checkbox value">{% if checklist.paymentsMatchCostCertificate == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                    </tr>
                </tbody>
            </table>

            <h3 class="label question bold">{{ (page ~ '.form.profCostsReasonableAndProportionate.label') | trans({}, 'admin-checklist') }}</h3>

            <table class="checkboxes labelvalue inline">
                <tbody>
                    <tr>
                        <td class="checkbox value">{% if checklist.profCostsReasonableAndProportionate == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                        <td class="checkbox value">{% if checklist.profCostsReasonableAndProportionate == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                    </tr>
                </tbody>
            </table>

            <h3 class="label question bold">{{ (page ~ '.form.hasDeputyOverchargedFromPreviousEstimates.label') | trans({}, 'admin-checklist') }}</h3>

            <table class="checkboxes labelvalue inline">
                <tbody>
                    <tr>
                        <td class="checkbox value">{% if checklist.hasDeputyOverchargedFromPreviousEstimates == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                        <td class="checkbox value">{% if checklist.hasDeputyOverchargedFromPreviousEstimates == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                    </tr>
                </tbody>
            </table>            
        </div>
        {% endif %}

        {% if report.hasSection('profDeputyCostsEstimate') %}
        <div class="section">
            <h2 class="section-heading">{{ (page ~ '.heading.profDeputyCostsEstimate') | trans({}, 'admin-checklist') }}</h2>
            
            <h3 class="label question bold">{{ (page ~ '.form.satisfiedEstimatesNextBilling.label') | trans({}, 'admin-checklist') }}</h3>

            <table class="checkboxes labelvalue inline">
                <tbody>
                    <tr>
                        <td class="checkbox value">{% if checklist.nextBillingEstimatesSatisfactory == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                        <td class="checkbox value">{% if checklist.nextBillingEstimatesSatisfactory == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                    </tr>
                </tbody>
            </table>

            {% if report.profDeputyManagementCostAmount is not null %}
                <h3 class="label question bold">
                    {{ (page ~ '.form.totalEstimatedCosts.label') | trans({}, 'admin-checklist') }}:
                    £{{ report.profDeputyManagementCostAmount | money_format }}
                </h3>
            {% endif %}
        </div>
        {% endif %}        

        <div class="section">
            <h2 class="section-heading">{{ (page ~ '.heading.nextPeriod') | trans({}, 'admin-checklist') }}</h2>

            {% if report.hasSection('lifestyle') %}
                <h3 class="label question bold">{{ (page ~ '.form.futureSignificantChanges.label') | trans({}, 'admin-checklist') }}</h3>
            {%  else %}
                <h3 class="label question bold">{{ (page ~ '.form.futureSignificantDecisions.label') | trans({}, 'admin-checklist') }}</h3>
            {% endif %}

            <table class="checkboxes labelvalue inline">
                <tbody>
                    <tr>
                        <td class="checkbox value">{% if checklist.futureSignificantDecisions == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                        <td class="checkbox value">{% if checklist.futureSignificantDecisions == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                        <td class="checkbox value">{% if checklist.futureSignificantDecisions == 'na' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'notApplicable' | trans({}, 'common' ) }}</td>
                    </tr>
                </tbody>
            </table>

            <h3 class="label question bold">{{ (page ~ '.form.hasDeputyRaisedConcerns.label') | trans({}, 'admin-checklist') }}</h3>

            <table class="checkboxes labelvalue inline">
                <tbody>
                    <tr>
                        <td class="checkbox value">{% if checklist.hasDeputyRaisedConcerns == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                        <td class="checkbox value">{% if checklist.hasDeputyRaisedConcerns == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                        <td class="checkbox value">{% if checklist.hasDeputyRaisedConcerns == 'na' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'notApplicable' | trans({}, 'common' ) }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="section">
            <h2 class="section-heading">{{ (page ~ '.heading.declaration') | trans({}, 'admin-checklist') }}</h2>

            <h3 class="label question bold">{{ (page ~ '.form.caseWorkerSatisified.label') | trans({}, 'admin-checklist') }}</h3>

            <table class="checkboxes labelvalue inline">
                <tbody>
                    <tr>
                        <td class="checkbox value">{% if checklist.caseWorkerSatisified == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                        <td class="checkbox value">{% if checklist.caseWorkerSatisified == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                        <td class="checkbox value">{% if checklist.caseWorkerSatisified == 'na' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'notApplicable' | trans({}, 'common' ) }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="section">
            <h2 class="section-heading">{{ (page ~ '.lodgingSummary.heading') | trans({}, 'admin-checklist') }}</h2>

            <div class="labelvalue push-half--top">
                <h3 class="label question bold">{{ (page ~ '.form.lodgingSummary.label') | trans({}, 'admin-checklist') }}</h3>
                <div class="value">{{ checklist.lodgingSummary | nl2br }}</div>
            </div>

            <div class="labelvalue push-half--top">
                <h3 class="label question bold">{{ (page ~ '.form.finalDecision.label') | trans({}, 'admin-checklist') }}</h3>
                <table class="checkboxes labelvalue">
                    <tr>
                        <td class="clean-cell">
                            <span class="checkbox value">
                                {% if checklist.finalDecision == 'for-review' %}X{% else %}&nbsp;{% endif %}
                            </span>
                        </td>
                        <td class="label soft-half--bottom">{{ (page ~ '.form.finalDecision.options.forReview') | trans({}, 'admin-checklist') }}</td>
                    </tr>
                    <tr>
                        <td class="clean-cell">
                            <span class="checkbox value">
                                {% if checklist.finalDecision == 'incomplete' %}X{% else %}&nbsp;{% endif %}
                            </span>
                        </td>
                        <td class="label soft-half--bottom">{{ (page ~ '.form.finalDecision.options.incomplete') | trans({}, 'admin-checklist') }}</td>
                    </tr>
                    <tr>
                        <td class="clean-cell">
                            <span class="checkbox value">
                                {% if checklist.finalDecision == 'further-casework-required' %}X{% else %}&nbsp;{% endif %}
                            </span>
                        </td>
                        <td class="label soft-half--bottom">{{ (page ~ '.form.finalDecision.options.furtherCaseworkRequired') | trans({}, 'admin-checklist') }}</td>
                    </tr>
                    <tr>
                        <td class="clean-cell">
                            <span class="checkbox value">
                                {% if checklist.finalDecision == 'satisfied' %}X{% else %}&nbsp;{% endif %}
                            </span>
                        </td>
                        <td class="label soft-half--bottom">{{ (page ~ '.form.finalDecision.options.satisfied') | trans({}, 'admin-checklist') }}</td>
                    </tr>
                </table>
            </div>

        </div>

        <div class="section">
            <h2 class="section-heading">{{ (page ~ '.furtherInfo.heading') | trans({}, 'admin-checklist') }}</h2>

            <table class="flush--top">
                <thead>
                    <tr>
                        <th class="text--left">Information provided</th>
                        <th class="text--left">Saved by</th>
                        <th class="text--left">Date saved</th>
                    </tr>
                </thead>
                <tbody>
                {% if checklist.checklistInformation is not empty %}
                    {% set counter = 1 %}
                    {% for info in checklist.checklistInformation %}
                        <tr>
                            <td class="value">{{ info.information | nl2br }}</td>
                            <td class="value align--top">{{ info.createdBy.fullname }}, {{ info.createdBy.roleFullName }}</td>
                            <td class="value no-wrap align--top">{{ info.createdOn | date("j F Y") }}</td>
                        </tr>
                        {% set counter = counter + 1 %}
                    {% endfor %}
                {% else %}
                    <tr>
                        <td class="value width-two-thirds">No information received.</td>
                        <td class="value width-sixth"></td>
                        <td class="value width-sixth"></td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>

         <p>
            <strong>{{ 'caseManager' | trans({}, 'common' ) }}:</strong> {{ checklist.submittedBy.fullName}} {% if checklist.submittedBy.roleFullName != 'Case Manager' %}({{ checklist.submittedBy.roleFullName }}){% endif %}<br/>
            <strong>{{ 'submissionDate' | trans({}, 'common' ) }}:</strong> {{ checklist.submittedOn | date("j F Y") }}<br/>
        </p>

    </div>
</div>
