            <h3 class="label question bold">{{ (page ~ '.form.careArrangements.label') | trans({}, 'admin-checklist') }}</h3>

            <table class="checkboxes labelvalue inline">
                <tbody>
                    <tr>
                        <td class="checkbox value">{% if checklist.careArrangements == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'yes' | trans({}, 'common' ) }}</td>
                        <td class="checkbox value">{% if checklist.careArrangements == 'no' %}X{% else %}&nbsp;{% endif %}</td>
                        <td class="label">{{ 'no' | trans({}, 'common' ) }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        {% if report.hasSection('lifestyle') %}
            <div class="section">
                <h2 class="section-heading">{{ (page ~ '.heading.healthAndLifestyle') | trans({}, 'admin-checklist') }}</h2>

                <h3 class="label question bold">{{ (page ~ '.form.satisfiedWithHealthAndLifestyle.label') | trans({}, 'admin-checklist') }}</h3>

                <table class="checkboxes labelvalue inline">
                    <tbody>
                        <tr>
                            <td class="checkbox value">{% if checklist.satisfiedWithHealthAndLifestyle == 'yes' %}X{% else %}&nbsp;{% endif %}</td>
