{% extends 'AppBundle:Components/Page:page-service.html.twig' %}
{% set translationDomain = "password-reset" %}
{% trans_default_domain translationDomain %}

{% block htmlTitle %}{{ 'page.htmlTitle' | trans }}{% endblock %}
{% block contentClass %}{{ parent() }} sign-in-page js-sign-in-page{% endblock %}

{% block pageTitle %}{{ 'pageTitle' | trans }}{% endblock %}
{% block pageHeader %}
  {{ parent() }}
{% endblock %}

{% block pageNavigation %}
{% endblock %}

{% block validationSummary %}
  {#    {{ form_errors_list(form) }}#}
{% endblock %}


{% block pageBody %}

  <p>{{ 'subtitle' | trans }}</p>

  {{ form_start(form, {attr: {novalidate: 'novalidate' }}) }}

  {{ form_input(form.password.first, 'form.password', { 'labelClass': 'required' } ) }}

  {{ form_input(form.password.second, 'form.password_confirm', { 'labelClass': 'required' } ) }}

  {{ form_submit(form.save, 'form.submit', {'buttonClass': 'behat-link-save'}) }}

  {{ form_end(form) }}

{% endblock %}



