{% extends 'AppBundle:Layouts:application_new.html.twig' %}

{% import 'AppBundle:Macros:macros.html.twig' as macros %}

{% set translationDomain = "user-details" %}
{% trans_default_domain translationDomain %}

{% block htmlTitle %}{{ 'htmlTitle.change-password' | trans({}, 'user-account') }}{% endblock %}
{% block pageTitle %}{{ 'h1Title.change-password' | trans({}, 'user-account') }}{% endblock %}

{% block breadcrumbs %}
    {{ macros.breadcrumbsSettings('password') }}
{% endblock %}

{% block pageContent %}

    {{ form_start(form, {attr: {novalidate: 'novalidate', class: '' } }) }}

    {{ form_input(form.current_password,'form.changeYourPassword.controls.currentPassword') }}
    {{ form_input(form.plain_password.first,'form.changeYourPassword.controls.newPassword') }}
    {{ form_input(form.plain_password.second,'form.changeYourPassword.controls.confirmNewPassword') }}

    {{ form_submit(form.save,'form.editYourDetails.controls.save', {'buttonClass': 'behat-link-save'}) }}

    {{ form_end(form) }}


{% endblock %}