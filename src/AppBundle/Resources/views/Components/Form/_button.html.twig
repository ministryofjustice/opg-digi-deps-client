{# rendered by FormFieldExtension::renderFormSubmit() #}
{% set buttonClass = buttonClass | default('') %}

{% set options = {
    'label': label ,
    'attr': {'class': 'govuk-button ' ~ buttonClass },
    'disabled': 'disabled' in buttonClass
} %}

{% if translationDomain is defined and translationDomain %}
    {% set options = options | merge({'translation_domain': translationDomain}) %}
{% endif %}

{{ form_widget(element, options) }}
